<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/style.css" rel="stylesheet" />
    <script
      defer
      src="https://unpkg.com/alpinejs@3.10.5/dist/cdn.min.js"
    ></script>
    <script src="https://kit.fontawesome.com/5041da7c8e.js" crossorigin="anonymous"></script>
  </head>
  <body
    x-data="{displayModalacc: false, displayModalJobCircular: false,displayPersonDialogue: false,displayOrganizationDialogue: false,}"
    @scroll.window="window.pageYOffset > 60 ? scrollFromTop = true : scrollFromTop = false"
    :class=" {'overflow-hidden' : topNavOpen, 
  'overflow-auto': !topNavOpen }"
  >
    <div id="root" class="antialiased text-base">
      <div
        class="flex min-h-screen bg-background font-sans-serif"
        x-data="{panel:false,modal: false, sidebarOpen:true}"
      >
        <section id="left-panel h-full">
          {% include 'partials/dashboard/sidebar.html' %}
        </section>
        <section id="right-panel" class="flex min-h-screen flex-grow flex-col">
          <header id="header" class="h-16 w-full">
            {% include 'partials/dashboard/_header.html' %}
          </header>
          <section
            id="content"
            class="overflow-scroll scrollbar-thin scrollbar-track-background scrollbar-thumb-primary bg-background"
            style="height: calc(100vh - 112px)"
          >
            {{ content | safe }}
          </section>
          <section id="footer" class="mt-auto h-12 w-full">
            {% include 'partials/dashboard/_footer.html' %}
          </section>
        </section>
      </div>
      {% include 'partials/dashboard/modals/accounts.html' %} {% include
      'partials/dashboard/modals/add_job_circular.html' %}
      {% include
      'partials/dashboard/customer_management/search_customer/PersonDialogue.html' %}
      {% include
      'partials/dashboard/customer_management/search_customer/OrganizationDialogue.html' %}
    </div>

  </body>
</html>
